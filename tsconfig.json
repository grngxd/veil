{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "jsx": "react",
        "jsxFactory": "h",
        "jsxFragmentFactory": "Fragment",
        "outDir": "./out",
        "rootDir": "./packages",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "paths": {
            "+*": ["./packages/*"]
        }
    },
    "include": ["packages/**/*"],
    "exclude": ["node_modules", "out"]
}